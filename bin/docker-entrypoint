#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Always ensure databases are ready before starting the app in containerized prod
# Cloud Run wraps the command, so checking the tail args is brittle. Keep this idempotent.
if [ "${RAILS_ENV}" = "production" ] || [ -n "${ENSURE_DB_PREPARE}" ]; then
  echo "[entrypoint] Running db:prepare..."
  ./bin/rails db:prepare

  echo "[entrypoint] Ensuring Solid Cable schema exists..."
  # If solid_cable_messages table is missing, load the cable schema into the cable DB.
  ./bin/rails runner 'ActiveRecord::Base.connected_to(database: :cable) { exit(0) if ActiveRecord::Base.connection.table_exists?(:solid_cable_messages); exit(1) }' \
    || ./bin/rails db:schema:load:cable
fi

exec "${@}"
