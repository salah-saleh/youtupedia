<%# Transcript Segment %>
<div class="group flex items-start gap-4 p-2 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors"
     data-youtube-target="segment"
     data-start="<%= transcript_segment[:start] %>"
     data-duration="<%= transcript_segment[:duration] %>">
  <button class="flex-shrink-0 text-sm text-purple-500 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 transition-colors"
          data-action="click->youtube#seekToTime"
          data-time="<%= transcript_segment[:start] %>">
    <%= format_duration(transcript_segment[:start]) %>
  </button>
  <div class="flex-1 text-gray-900 dark:text-white">
    <%= transcript_segment[:text] %>
  </div>
</div>