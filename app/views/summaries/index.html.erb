<%# Summaries Index %>
<div class="space-y-6">
  <%# Quick Summary Section %>
  <%= render "shared/form_section",
        title: "Quick Summary",
        url: parse_youtube_url_path,
        method: :post do |f| %>
    <%= render "shared/form_components/url_input",
          form: f,
          field: :url,
          placeholder: "Enter YouTube video link...",
          required: true %>

    <%= render "shared/form_components/button",
          text: "Summarize",
          type: "submit",
          variant: :primary,
          size: :lg %>
  <% end %>

  <%# Recent Summaries Grid %>
  <%= render "shared/page_header",
        title: "Recent Summaries",
        count: @summaries&.length,
        count_text: "summary" %>

  <%= render "shared/video_grid",
        videos: @summaries,
        empty_message: "No summaries available yet. Try summarizing a video above!" %>
</div>