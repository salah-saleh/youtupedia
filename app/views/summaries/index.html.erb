<div class="space-y-6">
  <!-- Quick Summary Section -->
  <%= render "shared/search_form", form_config: {
    title: "Quick Summary",
    url: parse_youtube_url_path,
    method: :post,
    field_name: :url,
    placeholder: "Enter YouTube video link here...",
    button_text: "Summarize"
  } %>

  <!-- Recent Summaries Grid -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6">
    <h2 class="text-xl lg:text-lg font-semibold mb-4">Recent Summaries</h2>
    <%= render "shared/video_grid",
          videos: @summaries,
          empty_message: "No summaries available yet. Try summarizing a video above!" %>
  </div>
</div>