<%= turbo_frame_tag "tldr" do %>
  <div class="bg-white rounded-lg shadow p-4 lg:p-6 border border-gray-100" data-controller="copy">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl lg:text-lg font-semibold">TLDR</h3>
      <button data-action="click->copy#copy"
              data-copy-target="button"
              class="text-purple-600 hover:text-purple-800 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
        </svg>
      </button>
    </div>

    <% if summary[:loading] %>
      <div data-controller="loading-message">
        <div class="animate-pulse space-y-3">
          <div class="h-4 bg-gray-200 rounded w-3/4"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2"></div>
        </div>
        <div class="mt-4 text-sm text-gray-500 italic">
          <span data-loading-message-target="message">
            Teaching AI to speed read... might take a few seconds ðŸ¤“
          </span>
        </div>
      </div>
    <% else %>
      <div class="text-gray-800 leading-relaxed prose prose-sm max-w-none" data-copy-target="source">
        <%= summary[:tldr] %>
      </div>
    <% end %>
  </div>
<% end %>