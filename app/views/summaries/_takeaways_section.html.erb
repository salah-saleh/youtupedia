<%= turbo_frame_tag "takeaways" do %>
  <div class="bg-white rounded-lg shadow p-4 lg:p-6 border border-gray-100" data-controller="copy">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl lg:text-lg font-semibold">Key Takeaways</h3>
      <button data-action="click->copy#copy"
              data-copy-target="button"
              class="text-purple-600 hover:text-purple-800 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
        </svg>
      </button>
    </div>

    <% if summary[:loading] %>
      <div class="animate-pulse space-y-4">
        <% 3.times do %>
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 bg-gray-200 rounded-full flex-shrink-0"></div>
            <div class="flex-1">
              <div class="h-4 bg-gray-200 rounded w-3/4 mb-2"></div>
              <div class="h-3 bg-gray-200 rounded w-1/4"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="space-y-4" data-copy-target="source">
        <% summary[:takeaways].each_with_index do |takeaway, index| %>
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-6 h-6 bg-purple-100 rounded-full flex items-center justify-center">
              <span class="text-sm text-purple-600 font-medium"><%= index + 1 %></span>
            </div>
            <div class="text-gray-800 leading-relaxed flex-1 prose prose-sm max-w-none">
              <%= takeaway[:content] %>
              <button class="ml-2 text-xs text-purple-500 hover:text-purple-700 transition-colors"
                     data-action="click->youtube#seekToTime"
                     data-time="<%= takeaway[:timestamp] %>">
                (<%= format_duration(takeaway[:timestamp]) %>)
              </button>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>