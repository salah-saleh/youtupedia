<div class="bg-white rounded-lg border border-gray-100 shadow-sm p-6">
  <div class="mb-4">
    <h3 class="text-gray-500 text-sm font-medium uppercase">Key Takeaways</h3>
  </div>

  <div class="space-y-3">
    <% summary[:takeaways].each_with_index do |takeaway, index| %>
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0 w-6 h-6 bg-purple-100 rounded-full flex items-center justify-center">
          <span class="text-sm text-purple-600 font-medium"><%= index + 1 %></span>
        </div>
        <p class="text-gray-800 leading-relaxed flex-1">
          <%= takeaway %>
        </p>
      </div>
    <% end %>
  </div>
</div>