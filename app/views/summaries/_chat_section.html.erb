<div class="bg-white rounded-lg shadow p-4 lg:p-6 border border-gray-100"
     data-controller="chat"
     data-chat-video-id-value="<%= summary[:video_id] %>">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-xl lg:text-lg font-semibold">Chat about this video</h3>
  </div>

  <div class="space-y-4">
    <div class="chat-messages space-y-4 max-h-96 overflow-y-auto mb-4"
         data-chat-target="messagesContainer">
      <% Chat::ChatThreadService.create_or_load_thread(summary[:video_id])[:messages].each do |message| %>
        <div class="p-3 rounded-lg <%= message[:role] == 'user' ? 'bg-purple-50' : 'bg-gray-50' %>">
          <div class="flex items-start gap-2">
            <span class="font-medium <%= message[:role] == 'user' ? 'text-purple-700' : 'text-gray-700' %>">
              <%= message[:role] == 'user' ? 'You' : 'Assistant' %>:
            </span>
            <div class="flex-1 prose prose-sm max-w-none">
              <%= message[:content_html].html_safe %>
            </div>
            <span class="text-xs text-gray-400">
              <%= time_ago_in_words(message[:timestamp]) %> ago
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <form data-action="submit->chat#submitQuestion" class="relative">
      <textarea
        data-chat-target="input"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none"
        rows="3"
        placeholder="Ask any question about this video..."
      ></textarea>

      <div class="absolute bottom-2 right-2 flex items-center gap-2">
        <div data-chat-target="loading" class="hidden">
          <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-purple-500"></div>
        </div>
        <button type="submit"
                class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors disabled:opacity-50"
                data-chat-target="submitButton">
          Send
        </button>
      </div>
    </form>
  </div>
</div>