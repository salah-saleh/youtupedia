<% content_for :container_width do %>max-w-6xl<% end %>

<%= turbo_stream_from "summaries:#{@summary_data[:video_id]}" %>

<div class="bg-white/35 dark:bg-gray-800/35 backdrop-blur-sm rounded-2xl border border-gray-200 dark:border-gray-700 space-y-8 p-4"
     data-controller="youtube"
     data-youtube-video-id-value="<%= @summary_data[:video_id] %>"
>

  <!-- Video Header -->
  <%= render "summaries/show/video_header", summary: @summary_data %>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Left Column -->
    <%= render "summaries/show/left_column" %>

    <!-- Right Column -->
    <%= render "summaries/show/right_column" %>
  </div>
</div>