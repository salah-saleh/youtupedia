<% if summaries.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% summaries.each do |summary| %>
      <%= link_to summary_path(youtube_url: "https://www.youtube.com/watch?v=#{summary[:video_id]}"),
            class: "border rounded-lg p-4 hover:shadow-md transition-shadow block" do %>
        <div class="aspect-video mb-3">
          <%= image_tag summary[:thumbnail],
                class: "w-full h-full object-cover rounded",
                alt: summary[:title] %>
        </div>
        <h3 class="font-medium mb-2 line-clamp-2"><%= summary[:title] %></h3>
        <p class="text-sm text-gray-600 mb-2"><%= summary[:channel] %></p>
        <div class="flex justify-between text-sm text-gray-500">
          <span>Published</span>
          <span><%= time_ago_in_words(summary[:published_at]) %> ago</span>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500 text-center py-8">No summaries available yet. Try summarizing a video above!</p>
<% end %>