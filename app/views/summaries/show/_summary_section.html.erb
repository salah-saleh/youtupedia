<%= turbo_frame_tag "summary" do %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 lg:p-6 border border-gray-200 dark:border-gray-700" data-controller="copy">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl lg:text-lg font-semibold text-gray-900 dark:text-white">Detailed Summary</h3>
      <button data-action="click->copy#copy"
              data-copy-target="button"
              class="text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
        </svg>
      </button>
    </div>

    <% if summary[:loading] %>
      <div class="animate-pulse space-y-3">
        <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
        <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
        <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-2/3"></div>
      </div>
    <% else %>
      <div class="text-gray-900 dark:text-white leading-relaxed prose prose-sm dark:prose-invert max-w-none" data-copy-target="source">
          <%= summary[:summary] %>
      </div>
    <% end %>
  </div>
<% end %>