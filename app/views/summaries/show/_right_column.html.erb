<!-- Right Column -->
<div class="space-y-6">
  <%= render "summaries/show/player_section" %>
  <%= render "summaries/show/navigation_buttons" unless true %>
  <div data-summary-loader-target="transcript">
    <%= render "summaries/show/transcript_section", summary: @summary_data unless @summary_data[:error] %>
  </div>
  <div data-summary-loader-target="tags">
    <%= render "summaries/show/tags_section", summary: @summary_data unless @summary_data[:error] %>
  </div>
  <%= render "summaries/show/chat_section", summary: @summary_data || @summary_data[:error] %>
</div>