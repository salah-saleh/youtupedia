<%# Navigation Buttons Component
    Provides video action buttons for saving, sharing, copying link, and downloading.

    Features:
    - Responsive layout with proper wrapping
    - Dark mode support
    - Hover states
    - Consistent icon styling
%>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 lg:p-6 border border-gray-200 dark:border-gray-700">
  <div class="flex flex-wrap gap-4">
    <button class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
      <%= render_icon :heart, class: "w-5 h-5" %>
      <span>Save</span>
    </button>

    <button class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
      <%= render_icon :share, class: "w-5 h-5" %>
      <span>Share</span>
    </button>

    <button class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
      <%= render_icon :clipboard, class: "w-5 h-5" %>
      <span>Copy Link</span>
    </button>

    <button class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
      <%= render_icon :arrow_down, class: "w-5 h-5" %>
      <span>Download</span>
    </button>
  </div>
</div>