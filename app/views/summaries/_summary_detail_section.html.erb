<div class="bg-white rounded-lg border border-gray-100 shadow-sm p-6" data-controller="copy">
  <div class="mb-4 flex justify-between items-center">
    <h3 class="text-gray-500 text-sm font-medium uppercase">Detailed Summary</h3>
    <button data-action="click->copy#copy"
            data-copy-target="button"
            class="text-purple-600 hover:text-purple-800">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
      </svg>
    </button>
  </div>

  <div class="text-gray-800 leading-relaxed" data-copy-target="source">
    <%
      # Split by timestamps (e.g., "text (123.45)")
      parts = summary[:summary].scan(/([^()]+)(?:\((\d+(?:\.\d+)?)\))?/)
      parts.each do |text, timestamp|
        if timestamp
    %>
        <%= text.strip %>
        <button class="inline-flex items-center mx-0.1 text-xs text-purple-500 hover:text-purple-700 hover:bg-purple-50 rounded"
                data-action="click->youtube#seekToTime"
                data-time="<%= timestamp.to_f %>">
          (<%= format_duration(timestamp.to_f.round) %>)
        </button>
    <%  else %>
        <%= text.strip %>
    <%  end %>
    <% end %>
  </div>
</div>