<%# Base card component for consistent layout across the app
    Usage:
    render "shared/card", href: path, classes: "optional-extra-classes" do |card|
      card.image { render "shared/image", ... }
      card.content { content_here }
    end
%>

<%= link_to href, class: "group block overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow-sm hover:shadow-md transition-shadow #{local_assigns[:class_names]}", data: local_assigns[:link_data] do %>
  <%= yield %>
<% end %>