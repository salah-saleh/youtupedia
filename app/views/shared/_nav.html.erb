<nav class="bg-white border-b">
  <div class="max-w-full mx-auto px-4">
    <div class="flex h-14 items-center justify-between">
      <!-- Left side -->
      <div class="flex items-center">
        <!-- Logo -->
        <div class="<%= local_assigns[:dashboard] ? 'lg:w-64' : '' %> flex items-center">
          <%= link_to root_path, class: "text-xl font-bold hover:text-gray-700 px-2" do %>
            Yt
          <% end %>
        </div>
      </div>

      <% if local_assigns[:dashboard] %>
        <!-- Center - Search Bar -->
        <div class="hidden sm:flex flex-1 justify-center max-w-3xl mx-4">
          <%= form_with url: parse_youtube_url_path, method: :post, class: "w-full max-w-2xl relative" do |f| %>
            <%= f.text_field :url,
                placeholder: "Enter YouTube URL...",
                class: "w-full px-4 py-2 pr-10 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
            <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </button>
          <% end %>
        </div>
      <% end %>

      <!-- Right side -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <% if local_assigns[:dashboard] %>
            <button class="hidden sm:block hover:bg-gray-100 px-3 py-1 rounded-md">
              <span class="sr-only">Notifications</span>
              <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            </button>

            <!-- User menu dropdown -->
            <div class="relative" data-controller="dropdown">
              <button type="button"
                      class="flex items-center space-x-2 hover:bg-gray-100 rounded-full p-1"
                      data-action="click->dropdown#toggle"
                      aria-expanded="false">
                <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center text-white">
                  <%= Current.user.email_address.first.upcase %>
                </div>
              </button>

              <!-- Dropdown menu -->
              <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 hidden
                          transform opacity-0 scale-95 transition-all duration-200 ease-in-out
                          origin-top-right z-50"
                   data-dropdown-target="menu">
                <div class="px-4 py-2 text-sm text-gray-500 border-b">
                  <%= Current.user.email_address %>
                </div>
                <%= button_to "Sign Out", session_path, method: :delete,
                    class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              </div>
            </div>
          <% else %>
            <% if Rails.env.development? %>
              <%= link_to "Manage Users", dev_users_path, class: "text-gray-700 hover:text-gray-900" %>
            <% end %>
            <%= button_to "Sign Out", session_path, method: :delete,
                class: "text-gray-700 hover:text-gray-900" %>
          <% end %>
        <% else %>
          <%= link_to "Sign Up", new_registration_path, class: "text-gray-700 hover:text-gray-900" %>
          <%= link_to "Sign In", new_session_path, class: "text-gray-700 hover:text-gray-900" %>
        <% end %>
      </div>
    </div>

    <!-- Mobile search bar -->
    <% if local_assigns[:dashboard] %>
      <div class="sm:hidden py-2">
        <%= form_with url: parse_youtube_url_path, method: :post, class: "relative" do |f| %>
          <%= f.text_field :url,
              placeholder: "Enter YouTube URL...",
              class: "w-full px-4 py-2 pr-10 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
          <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>