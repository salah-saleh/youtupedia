<%# Navigation Component
    Provides the main navigation bar with authentication and theme controls.

    Dependencies:
    - Authentication helpers (user_signed_in?, current_user)
    - Tailwind CSS (for styling)
    - Dark mode support
    - Theme controller (Stimulus)
    - Dropdown controller (Stimulus)
    - Search toggle controller (Stimulus)
    - Nav toggle controller (Stimulus)
    - Icon helper (sun, moon, magnifying_glass, bars_3 icons)

    Features:
    - Responsive design
    - Dark mode toggle
    - User authentication state
    - Search bar (desktop and mobile)
    - Mobile navigation toggle
    - User dropdown menu
    - Accessible controls
%>

<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700" data-controller="search-toggle nav-toggle">
  <div class="max-w-full mx-auto px-4">
    <div class="flex h-14 items-center justify-between">
      <!-- Left side -->
      <div class="flex items-center">
        <!-- Logo -->
        <div class="<%= local_assigns[:dashboard] ? 'lg:w-64' : '' %> flex items-center space-x-2">
          <%= link_to root_path, class: "text-xl px-2 flex items-center group" do %>
            <div class="relative flex items-center">
              <span class="text-purple-600 dark:text-purple-400 text-4xl leading-none font-normal transform hover:scale-105 transition-all duration-300 font-['Pacifico']">Y</span>
              <div class="flex items-center space-x-1 -ml-1">
                <span class="text-purple-500 dark:text-purple-300 text-sm font-['Pacifico'] transform translate-y-1 rotate-3"> 2si</span>
              </div>
            </div>
          <% end %>

          <% if local_assigns[:dashboard] %>
            <!-- Mobile nav toggle -->
            <button type="button"
                    class="lg:hidden p-2 text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300"
                    data-action="nav-toggle#toggle">
              <%= render_icon :bars_3, class: "w-5 h-5" %>
            </button>

            <!-- Mobile search toggle -->
            <button type="button"
                    class="sm:hidden p-2 text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300"
                    data-action="search-toggle#toggle">
              <%= render_icon :magnifying_glass, class: "w-5 h-5" %>
            </button>
          <% end %>
        </div>
      </div>

      <% if local_assigns[:dashboard] %>
        <!-- Center - Search Bar -->
        <div class="hidden sm:flex flex-1 justify-center max-w-3xl mx-4">
          <%= form_with url: parse_youtube_url_path, method: :post, class: "w-full max-w-2xl relative" do |f| %>
            <%= f.text_field :url,
                placeholder: "Enter YouTube URL or Search Keywords...",
                class: "w-full px-4 py-2 pr-10 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
            <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2">
              <%= render_icon :magnifying_glass, class: "w-5 h-5 text-gray-400 dark:text-gray-500" %>
            </button>
          <% end %>
        </div>
      <% end %>

      <!-- Right side -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <% if local_assigns[:dashboard] %>
            <!-- Theme toggle -->
            <button type="button"
                    data-controller="theme"
                    data-action="theme#toggle"
                    class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent bg-gray-200 dark:bg-gray-700 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800"
                    role="switch"
                    aria-checked="false">
              <span class="sr-only">Toggle dark mode</span>
              <span data-theme-target="indicator"
                    class="pointer-events-none relative inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out translate-x-0 dark:translate-x-5">
                <span class="absolute inset-0 flex h-full w-full items-center justify-center transition-opacity dark:opacity-0">
                  <%= render_icon :sun, class: "h-3 w-3 text-gray-400" %>
                </span>
                <span class="absolute inset-0 flex h-full w-full items-center justify-center transition-opacity opacity-0 dark:opacity-100">
                  <%= render_icon :moon, class: "h-3 w-3 text-purple-600" %>
                </span>
              </span>
            </button>

            <!-- User menu dropdown -->
            <div class="relative" data-controller="dropdown">
              <button type="button"
                      class="flex items-center space-x-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-full p-1"
                      data-action="click->dropdown#toggle"
                      aria-expanded="false">
                <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center text-white">
                  <%= Current.user.email_address.first.upcase %>
                </div>
              </button>

              <!-- Dropdown menu -->
              <div class="absolute right-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-lg shadow-lg py-2 hidden
                          transform opacity-0 scale-95 transition-all duration-200 ease-in-out
                          origin-top-right z-50"
                   data-dropdown-target="menu">
                <div class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400 border-b border-gray-200 dark:border-gray-700">
                  <div class="truncate" title="<%= Current.user.email_address %>">
                    <%= Current.user.email_address %>
                  </div>
                </div>
                <%= button_to "Sign Out", session_path, method: :delete,
                    class: "w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
              </div>
            </div>
          <% else %>
            <% if Rails.env.development? %>
              <%= link_to "Manage Users", dev_users_path, class: "text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
            <% end %>
            <%= button_to "Sign Out", session_path, method: :delete,
                class: "text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
          <% end %>
        <% else %>
          <%= link_to "Sign Up", new_registration_path, class: "text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
          <%= link_to "Sign In", new_session_path, class: "text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
        <% end %>
      </div>
    </div>

    <!-- Mobile search bar -->
    <% if local_assigns[:dashboard] %>
      <div class="sm:hidden py-2 hidden" data-search-toggle-target="form">
        <%= form_with url: parse_youtube_url_path, method: :post, class: "relative" do |f| %>
          <%= f.text_field :url,
              placeholder: "Enter YouTube URL or Search Keywords...",
              class: "w-full px-4 py-2 pr-10 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
          <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2">
            <%= render_icon :magnifying_glass, class: "w-5 h-5 text-gray-400 dark:text-gray-500" %>
          </button>
        <% end %>
      </div>

      <!-- Mobile navigation -->
      <div class="lg:hidden py-2 hidden border-t border-gray-200 dark:border-gray-700" data-nav-toggle-target="menu">
        <nav class="flex flex-col space-y-1">
          <%= link_to summaries_path,
              class: "px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md
                      #{current_page?(summaries_path) ? 'bg-gray-100 dark:bg-gray-700' : ''}" do %>
            <div class="flex items-center">
              <%= render_icon :video_camera, class: "w-5 h-5 mr-3" %>
              <span>Summaries</span>
            </div>
          <% end %>

          <%= link_to channels_path,
              class: "px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md
                      #{current_page?(channels_path) ? 'bg-gray-100 dark:bg-gray-700' : ''}" do %>
            <div class="flex items-center">
              <%= render_icon :channel, class: "w-5 h-5 mr-3" %>
              <span>Channels</span>
            </div>
          <% end %>

          <%= link_to search_index_path,
              class: "px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md
                      #{current_page?(search_index_path) ? 'bg-gray-100 dark:bg-gray-700' : ''}" do %>
            <div class="flex items-center">
              <%= render_icon :magnifying_glass, class: "w-5 h-5 mr-3" %>
              <span>Search</span>
            </div>
          <% end %>

          <%= link_to settings_path,
              class: "px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md
                      #{current_page?(settings_path) ? 'bg-gray-100 dark:bg-gray-700' : ''}" do %>
            <div class="flex items-center">
              <%= render_icon :cog, class: "w-5 h-5 mr-3" %>
              <span>Settings</span>
            </div>
          <% end %>
        </nav>
      </div>
    <% end %>
  </div>
</nav>