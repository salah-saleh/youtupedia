<%# Empty State Component
    Provides consistent styling for empty states

    Usage:
    render "shared/empty_state",
      icon: :video,
      message: "No videos found",
      description: "Try adjusting your search" # optional
%>

<div class="text-center py-12">
  <% if local_assigns[:icon].present? %>
    <%= render_icon icon, class: "mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" %>
  <% end %>

  <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">
    <%= local_assigns[:message] %>
  </h3>

  <% if local_assigns[:description].present? %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      <%= description %>
    </p>
  <% end %>

  <% if local_assigns[:action].present? %>
    <div class="mt-6">
      <%= render "shared/form_components/button",
            text: action[:text],
            icon: action[:icon],
            variant: :primary,
            size: :md,
            type: :link,
            href: action[:href] %>
    </div>
  <% end %>
</div>