<%# Usage: render "shared/empty_state", message: "No items found", icon: :search %>

<div class="text-center py-8">
  <%# Icon %>
  <div class="mb-4">
    <% case local_assigns.fetch(:icon, :default).to_sym %>
    <% when :search %>
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
    <% when :video %>
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
    <% when :channel %>
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
    <% else %>
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
      </svg>
    <% end %>
  </div>

  <%# Message %>
  <p class="text-base text-gray-500">
    <%= local_assigns[:message] || "No items available." %>
  </p>

  <%# Optional action button %>
  <% if local_assigns[:action_text] && local_assigns[:action_path] %>
    <div class="mt-4">
      <%= link_to action_text, action_path,
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-purple-600 hover:text-purple-900 bg-white rounded-md hover:bg-purple-50 border border-purple-200 shadow-sm transition-colors" %>
    </div>
  <% end %>
</div>