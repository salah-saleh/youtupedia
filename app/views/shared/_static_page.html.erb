<%# Static Page Layout
    Required local variables:
    - title: String for page title
    Optional local variables:
    - subtitle: String for page subtitle
%>

<section class="bg-white/35 dark:bg-gray-800/35 backdrop-blur-sm shadow-sm rounded-lg border border-gray-200 dark:border-gray-700">
  <div class="px-4 py-4 sm:p-4">
    <div class="mb-4">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white pb-8">
            <%= title %>
        </h3>
        <div class="text-gray-900 dark:text-white text-sm">
        <%= yield if block_given? %>
        </div>
    </div>

  </div>
</section>