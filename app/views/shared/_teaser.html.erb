<%# Teaser section showcasing key capabilities. %>
<section class="mt-12 hidden" aria-label="What you can do with Youtupedia">
  <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-6 sm:p-8">
    <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 dark:text-white mb-2">
      Do more in minutes, not hours
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
      Try 1 summary free — no signup. Free account gets 2/day. Upgrade anytime.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :video_camera, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Timestamped summary</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Skimmable highlights with jump-to-time markers.</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :clipboard, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Video to text</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Readable transcripts for any video.</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :channel, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Bulk summarize</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Playlists and channels in one go.</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :globe, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Translate</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Summaries and transcripts in 40+ languages.</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :share, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Export & share</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">TXT, CSV, JSON, SRT, VTT — ready to use.</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60">
        <%= render_icon :information_circle, class: "w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5" %>
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Insights & chat</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Ask questions across playlists or channels.</p>
        </div>
      </div>
    </div>

  </div>
  </section>


