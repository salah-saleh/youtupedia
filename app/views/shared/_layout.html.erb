<!DOCTYPE html>
<html class="h-full">
  <%= render "shared/head" do %>
    <%= yield :title %>
  <% end %>

  <body class="h-full bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white relative overflow-x-hidden">
    <!-- Mesh gradient background (fixed so it persists while scrolling) -->
    <div aria-hidden="true" class="pointer-events-none fixed inset-0 opacity-80 dark:opacity-60 -z-10"
         style="background-image:
           radial-gradient(800px 400px at 10% 10%, rgba(124,58,237,0.20) 0%, rgba(124,58,237,0.05) 50%, transparent 70%),
           radial-gradient(600px 300px at 90% 20%, rgba(59,130,246,0.18) 0%, rgba(59,130,246,0.06) 50%, transparent 70%),
           radial-gradient(700px 350px at 20% 90%, rgba(16,185,129,0.16) 0%, rgba(16,185,129,0.05) 50%, transparent 70%),
           radial-gradient(900px 450px at 80% 85%, rgba(244,114,182,0.14) 0%, rgba(244,114,182,0.05) 50%, transparent 70%);
           filter: saturate(1.2);"></div>

    <!-- Geometric grid overlay (fixed, subtle, full viewport) -->
    <div aria-hidden="true" class="pointer-events-none fixed inset-0 opacity-25 dark:opacity-20 -z-10"
         style="
           background-image:
             linear-gradient(to right, rgba(107,114,128,0.15) 1px, transparent 1px),
             linear-gradient(to bottom, rgba(107,114,128,0.15) 1px, transparent 1px);
           background-size: 28px 28px;
         "></div>

    <div class="min-h-full flex flex-col">
      <%= render "shared/nav"%>
      <%= render "shared/toast" %>

      <div class="flex flex-col lg:flex-row flex-1">
        <!-- Sidebar (includes both desktop and mobile navigation) -->
        <%= render "shared/sidebar" %>

        <!-- Main Content -->
        <main class="flex-1 flex flex-col">
          <div class="flex-1 p-4 lg:p-6">
            <div class="<%= content_for?(:container_width) ? yield(:container_width) : 'max-w-7xl' %> mx-auto w-full px-4">
              <%= yield %>
            </div>
          </div>
          
          <%= render "shared/footer" %>
        </main>
      </div>
    </div>
  </body>
</html>