<%# Main Navigation %>
<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <%# Left side %>
      <div class="flex items-center">
        <%# Logo %>
        <div class="flex-shrink-0">
          <%= link_to root_path, class: "text-purple-600 dark:text-purple-400 font-bold text-xl" do %>
            Yt
          <% end %>
        </div>

        <%# Main navigation %>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <%= link_to "Summaries", root_path,
                class: "#{current_page?(root_path) ? 'bg-purple-500 text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-purple-500 hover:text-white'} rounded-md px-3 py-2 text-sm font-medium" %>

            <%= link_to "Channels", channels_path,
                class: "#{current_page?(channels_path) ? 'bg-purple-500 text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-purple-500 hover:text-white'} rounded-md px-3 py-2 text-sm font-medium" %>

            <%= link_to "Search", search_index_path,
                class: "#{current_page?(search_index_path) ? 'bg-purple-500 text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-purple-500 hover:text-white'} rounded-md px-3 py-2 text-sm font-medium" %>
          </div>
        </div>
      </div>

      <%# Right side %>
      <div class="hidden md:block">
        <div class="ml-4 flex items-center md:ml-6">
          <%= link_to settings_path,
                class: "rounded-full bg-gray-100 dark:bg-gray-700 p-1 text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" do %>
            <span class="sr-only">Settings</span>
            <%= render_icon :cog, class: "h-6 w-6" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>