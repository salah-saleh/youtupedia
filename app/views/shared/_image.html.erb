<%# Usage: render "shared/image", src: image_url, alt: alt_text, aspect: "video|square", size: "sm|md|lg|full" %>

<div class="relative overflow-hidden <%= local_assigns[:aspect] == "square" ? "aspect-square" : "aspect-video" %> <%= local_assigns[:size] == "full" ? "w-full" : "w-#{local_assigns[:size] || 'md'}" %> bg-gray-100 dark:bg-gray-900 rounded">
  <img
    src="<%= src %>"
    alt="<%= alt %>"
    class="w-full h-full object-cover"
    loading="lazy"
  >
</div>