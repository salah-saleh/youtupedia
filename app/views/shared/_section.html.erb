<%# Section Container Component
    Provides consistent styling for main content sections

    Usage:
    render "shared/section", title: "My Section" do
      Content goes here
    end

    Parameters:
    - title: String (optional) - Section title
    - subtitle: String (optional) - Additional context below title
    - padding: String (optional) - Custom padding classes
    - classes: String (optional) - Additional CSS classes
%>

<section class="bg-white/35 dark:bg-gray-800/35 backdrop-blur-sm shadow-sm rounded-lg border border-gray-200 dark:border-gray-700 <%= local_assigns[:classes] %>">
  <div class="<%= local_assigns[:padding] || 'px-4 py-5 sm:p-6' %>">
    <% if local_assigns[:title].present? %>
      <div class="mb-4">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">
          <%= local_assigns[:title] %>
        </h3>
        <% if local_assigns[:subtitle].present? %>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            <%= local_assigns[:subtitle] %>
          </p>
        <% end %>
      </div>
    <% end %>

    <div class="text-gray-900 dark:text-white">
      <%= yield if block_given? %>
    </div>
  </div>
</section>