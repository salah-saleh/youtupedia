<%# Footer Links Component
    Shared between footer and mobile navigation
    
    Optional local variables:
    - mobile: Boolean to show mobile version with icons
%>

<% if local_assigns[:mobile] %>
  <%# Mobile version with icons - vertical layout %>
  <%= link_to about_path,
        class: "flex items-center px-2 py-2 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white rounded-md" do %>
    <%= render_icon :information_circle, class: "mr-4 h-5 w-5" %>
    <span>About</span>
  <% end %>

  <%= link_to contact_path,
        class: "flex items-center px-2 py-2 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white rounded-md" do %>
    <%= render_icon :envelope, class: "mr-4 h-5 w-5" %>
    <span>Contact us</span>
  <% end %>
<% else %>
  <%# Desktop version - horizontal layout %>
  <div class="flex space-x-6">
    <%= link_to "About",
          about_path,
          class: "text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" %>

    <%= link_to "Contact us",
          contact_path,
          class: "text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" %>
  </div>
<% end %>
