<%# Usage: render "shared/skeleton", variant: "text", lines: 3,
           class: "w-full" %>

<%
  variant = local_assigns.fetch(:variant, "text")
  lines = local_assigns.fetch(:lines, 1)
%>

<div class="animate-pulse">
  <% case variant %>
  <% when "text" %>
    <% lines.times do |i| %>
      <div class="bg-gray-200 rounded h-4 <%= i == lines - 1 ? 'w-3/4' : 'w-full' %> <%= 'mb-2' if i < lines - 1 %>"></div>
    <% end %>

  <% when "title" %>
    <div class="bg-gray-200 rounded h-6 w-3/4"></div>

  <% when "image" %>
    <div class="bg-gray-200 rounded aspect-video w-full"></div>

  <% when "avatar" %>
    <div class="bg-gray-200 rounded-full w-10 h-10"></div>

  <% when "button" %>
    <div class="bg-gray-200 rounded-lg h-10 w-24"></div>

  <% when "card" %>
    <div class="space-y-3">
      <div class="bg-gray-200 rounded aspect-video w-full"></div>
      <div class="space-y-2">
        <div class="bg-gray-200 rounded h-5 w-3/4"></div>
        <div class="bg-gray-200 rounded h-4 w-1/2"></div>
      </div>
    </div>

  <% when "stats" %>
    <div class="flex space-x-4">
      <div class="flex-1">
        <div class="bg-gray-200 rounded h-4 w-full mb-1"></div>
        <div class="bg-gray-200 rounded h-6 w-1/2"></div>
      </div>
      <div class="flex-1">
        <div class="bg-gray-200 rounded h-4 w-full mb-1"></div>
        <div class="bg-gray-200 rounded h-6 w-1/2"></div>
      </div>
    </div>
  <% end %>
</div>