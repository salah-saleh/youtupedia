<%= render "shared/container", max_width: "max-w-md", class: "p-6" do %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Sign In</h2>

    <%= form_with url: session_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email_address, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <%= f.submit "Sign In", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700" %>
    <% end %>

    <% if Rails.env.development? %>
      <div class="mt-6 text-center">
        <%= link_to "Manage Users", dev_users_path, class: "text-sm text-purple-600 hover:text-purple-800" %>
      </div>
    <% end %>
  </div>
<% end %>
