<%= render "shared/container", max_width: "max-w-md", class: "p-4 sm:p-6" do %>
  <div class="bg-white rounded-lg shadow p-4 sm:p-6 border border-gray-100">
    <h2 class="text-lg lg:text-xl font-semibold mb-6 text-center">Sign In</h2>

    <%= form_with url: session_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email_address,
            class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
            class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <%= f.submit "Sign In",
          class: "w-full h-12 px-6 bg-purple-600 text-white text-base rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors" %>
    <% end %>

    <% if Rails.env.development? %>
      <div class="mt-6 text-center">
        <%= link_to "Manage Users", dev_users_path,
            class: "text-base text-purple-600 hover:text-purple-800 transition-colors" %>
      </div>
    <% end %>
  </div>
<% end %>
