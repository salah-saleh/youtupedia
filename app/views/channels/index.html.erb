<div class="space-y-6">
  <!-- Add Channel Section -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6">
    <h2 class="text-xl lg:text-lg font-semibold mb-4">Add Channel</h2>

    <div class="relative">
      <%= form_with url: channels_path, method: :post, class: "flex" do |f| %>
        <%= f.text_field :channel_url,
            placeholder: "Enter YouTube channel URL here...",
            required: true,
            class: "flex-1 px-4 py-3.5 text-base rounded-full border border-purple-300 focus:outline-none focus:border-purple-500" %>

        <%= f.submit "Add Channel",
            class: "absolute right-2 top-1/2 transform -translate-y-1/2 px-6 py-2.5 text-base bg-purple-500 text-white rounded-full hover:bg-purple-600" %>
      <% end %>
    </div>
  </div>

  <!-- Channels Grid -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6">
    <h2 class="text-xl lg:text-lg font-semibold mb-4">Your Channels</h2>
    <% if @channels.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @channels.each do |channel| %>
          <%= link_to channel_path(channel[:channel_id]),
                class: "border rounded-lg p-4 hover:shadow-md transition-shadow block" do %>
            <div class="aspect-video mb-3">
              <%= image_tag channel[:thumbnail_url],
                    class: "w-full h-full object-cover rounded",
                    alt: channel[:title] %>
            </div>
            <h3 class="text-base lg:text-sm font-medium mb-2 line-clamp-2"><%= channel[:title] %></h3>
            <div class="flex justify-between text-base lg:text-sm text-gray-500">
              <span>Subscribers</span>
              <span><%= number_with_delimiter(channel[:subscriber_count]) %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-base text-gray-500 text-center py-8">No channels added yet. Add your first channel above!</p>
    <% end %>
  </div>
</div>