<%# Channel Show Page %>
<div class="space-y-6">
  <%# About Channel Section %>
  <%= render "shared/channel_about", channel: @channel %>

  <%# Channel Videos Grid %>
  <%= turbo_frame_tag "channel_videos_content", data: { turbo_action: "advance" } do %>
    <%= render "shared/video_grid",
          videos: @videos,
          title: "Channel Videos",
          path: channel_path(@channel_name),
          empty_message: "No videos found for this channel",
          youtube_pagination: true
    %>
  <% end %>
</div>