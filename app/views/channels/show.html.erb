<div data-controller="youtube">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Left Column -->
      <div class="space-y-6">
        <!-- Channel Header -->
        <div>
          <h1 class="text-2xl font-bold mb-3">
            <%= @channel[:title] %>
          </h1>

          <div class="flex items-center text-gray-600 text-sm space-x-4 mb-6">
            <span><%= number_with_delimiter(@channel[:subscriber_count]) %> subscribers</span>
            <span>â€¢</span>
            <span><%= pluralize(@channel[:video_count], 'video') %></span>
          </div>
        </div>

        <!-- Channel Description -->
        <div class="bg-white rounded-lg border border-gray-100 shadow-sm p-6">
          <div class="mb-4">
            <h3 class="text-gray-500 text-sm font-medium uppercase">About Channel</h3>
          </div>
          <p class="text-gray-800 leading-relaxed">
            <%= @channel[:description] %>
          </p>
        </div>
      </div>

      <!-- Right Column -->
      <div class="space-y-6">
        <!-- Navigation Buttons -->
        <div class="flex items-center space-x-4">
          <button class="flex items-center space-x-2 text-gray-600 hover:text-gray-900 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <span>Follow</span>
          </button>

          <button class="flex items-center space-x-2 text-gray-600 hover:text-gray-900 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
            <span>Share</span>
          </button>
        </div>

        <!-- Videos Grid -->
        <div class="bg-white rounded-lg border border-gray-100 shadow-sm p-6">
          <h3 class="text-lg font-medium mb-4">Latest Videos</h3>
          <div class="space-y-4">
            <% @videos.each do |video| %>
              <%= link_to summary_path(youtube_url: "https://www.youtube.com/watch?v=#{video[:video_id]}"),
                    class: "flex gap-4 p-2 hover:bg-gray-50 rounded-lg transition-colors" do %>
                <div class="w-48 aspect-video flex-shrink-0">
                  <%= image_tag video[:thumbnail], class: "w-full h-full object-cover rounded" %>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="font-medium mb-1 line-clamp-2"><%= video[:title] %></h4>
                  <p class="text-sm text-gray-600">
                    Published <%= time_ago_in_words(video[:published_at]) %> ago
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>