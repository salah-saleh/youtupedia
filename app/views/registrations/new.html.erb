<%= render "shared/container", max_width: "max-w-md", class: "p-6" do %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Create Account</h2>

    <%= form_with model: @user, url: registrations_path, class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-4">
          <h3 class="font-medium">Please fix the following errors:</h3>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email_address, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <%= f.submit "Create Account", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign In", new_session_path, class: "text-purple-600 hover:text-purple-800" %>
    </div>
  </div>
<% end %>