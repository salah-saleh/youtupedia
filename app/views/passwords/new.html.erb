<%# Password Reset Request Form %>
<%= render "shared/auth_layout",
    heading: "Reset your password",
    subheading: "Enter your email address and we'll send you a link to reset your password",
    footer_text: "Remember your password?",
    footer_link_text: "Sign in",
    footer_link_path: new_session_path do %>

  <%= form_with url: passwords_path, class: "space-y-6", data: { turbo: false } do |f| %>
    <% if flash[:alert].present? %>
      <div class="rounded-md bg-red-50 dark:bg-red-900/50 p-4 mb-6">
        <div class="text-sm text-red-700 dark:text-red-200">
          <%= flash[:alert] %>
        </div>
      </div>
    <% end %>

    <% if flash[:notice].present? %>
      <div class="rounded-md bg-green-50 dark:bg-green-900/50 p-4 mb-6">
        <div class="text-sm text-green-700 dark:text-green-200">
          <%= flash[:notice] %>
        </div>
      </div>
    <% end %>

    <%= render "shared/auth_input",
        form: f,
        field: :email,
        type: :email_field,
        label: "Email address",
        placeholder: "you@example.com" %>

    <%= f.submit "Send Reset Instructions",
        class: "w-full px-4 py-3 bg-purple-600 text-white text-base font-medium rounded-lg
                hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500
                focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors" %>
  <% end %>
<% end %>
