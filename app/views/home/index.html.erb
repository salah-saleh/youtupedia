<%# Home page with centered search form
    Features:
    - Large centered heading
    - Search form for YouTube URLs
    - Consistent styling with application theme
    - Dark mode support
%>

<%# Set SEO meta tags %>
<% content_for :title, "YouTube Video Summaries & Channel Insights" %>
<% content_for :description, "Discover and analyze YouTube content with AI-powered summaries and detailed channel insights. Get comprehensive analysis of your favorite YouTube videos and channels." %>

<%# Schema.org markup for better SEO %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Youtupedia",
  "description": "AI-powered YouTube video summaries and channel insights platform",
  "url": "<%= request.original_url %>",
  "applicationCategory": "UtilityApplication",
  "offers": {
    "@type": "Offer",
    "price": "0"
  }
}
</script>

<main class="relative flex flex-col items-center pt-5 px-4 sm:px-6 lg:px-8">

  <div class="w-full max-w-6xl space-y-8 relative">
    <!-- Heading -->
    <header class="text-center space-y-4">
      <!-- Logo moved to top -->
      <div class="flex items-center justify-center gap-2">
        <%= image_tag "youtupedia-inverted.png", class: "h-10 w-10 hidden dark:block", alt: "Youtupedia Logo Dark Mode" %>
        <%= image_tag "youtupedia.png", class: "h-10 w-10 block dark:hidden", alt: "Youtupedia Logo Light Mode" %>
        <span class="text-lg font-semibold text-gray-900 dark:text-white">Youtupedia</span>
      </div>
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Deep AI for YouTube â€” beyond transcripts and summaries
      </h1>
      <p class="text-sm text-gray-600 dark:text-gray-400">Paste any video or channel URL to get timestamps, TL;DRs, transcripts, and insights.</p>
    </header>

    <!-- Search Form -->
    <section class="mt-8" aria-label="YouTube URL Search">
      <%= form_with url: parse_youtube_url_path, method: :post, class: "relative flex justify-center", data: { turbo: false } do |f| %>
        <div class="search-container relative w-full max-w-2xl" 
             data-controller="home--search-animation"
             data-action="focusin->home--search-animation#inputFocused focusout->home--search-animation#inputBlurred">
          <%= f.label :url, "Enter YouTube URL", class: "sr-only" %>
          <%= f.text_field :url,
              placeholder: "e.g https://www.youtube.com/watch?v=XyhhwVJB9Z4",
              class: "search-input block w-full px-4 py-3 rounded-xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none text-base shadow-sm transition-all duration-200",
              autofocus: true,
              "aria-label": "YouTube URL input",
              data: { 
                "home--search-animation-target": "input",
                action: "input->home--search-animation#inputChanged"
              } %>

          <button type="submit"
                  class="absolute right-3 top-1/2 transform -translate-y-1/2 p-2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 z-10"
                  aria-label="Search">
            <%= render_icon :magnifying_glass, class: "w-6 h-6" %>
          </button>
        </div>
      <% end %>
    </section>

    <%= render "home/demo_summary" %>
    <%= render "shared/teaser" %>

  </div>
</main>