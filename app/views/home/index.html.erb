<% if user_signed_in? %>
  <div class="space-y-6">
    <!-- Quick Summary Section -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold mb-4">Quick Summary</h2>

      <div class="relative">
        <%= form_with url: create_from_url_summaries_path, method: :get, class: "flex" do |f| %>
          <%= f.text_field :youtube_url,
              placeholder: "Enter YouTube video link here...",
              required: true,
              class: "flex-1 px-4 py-3 rounded-full border border-purple-300 focus:outline-none focus:border-purple-500" %>

          <%= f.submit "Summarize",
              class: "absolute right-2 top-1/2 transform -translate-y-1/2 px-6 py-2 bg-purple-500 text-white rounded-full hover:bg-purple-600" %>
        <% end %>
      </div>
    </div>

    <% if @summary %>
      <%= render template: "summaries/show" %>
    <% else %>
      <!-- Recent Summaries Section -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold mb-4">Recent Summaries</h2>
        <% if @recent_summaries.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @recent_summaries.each do |summary| %>
              <%= link_to create_from_url_summaries_path(youtube_url: "https://www.youtube.com/watch?v=#{summary[:video_id]}"),
                    class: "border rounded-lg p-4 hover:shadow-md transition-shadow block" do %>
                <div class="aspect-video mb-3">
                  <%= image_tag summary[:thumbnail],
                        class: "w-full h-full object-cover rounded",
                        alt: summary[:title] %>
                </div>
                <h3 class="font-medium mb-2 line-clamp-2"><%= summary[:title] %></h3>
                <p class="text-sm text-gray-600 mb-2"><%= summary[:channel] %></p>
                <div class="flex justify-between text-sm text-gray-500">
                  <span>Published</span>
                  <span><%= time_ago_in_words(summary[:published_at]) %> ago</span>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">No summaries available yet. Try summarizing a video above!</p>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render "landing_page" %>
<% end %>