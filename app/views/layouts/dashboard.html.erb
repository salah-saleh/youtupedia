<!DOCTYPE html>
<html class="h-full">
<head>
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%= javascript_importmap_tags %>
</head>
<body class="h-full">
  <div class="min-h-full flex flex-col">
    <!-- Top Navigation Bar -->
    <nav class="bg-white border-b">
      <div class="max-w-full mx-auto px-4">
        <div class="flex h-14 items-center">
          <!-- Left side -->
          <div class="w-64">
            <%= link_to root_path, class: "text-xl font-bold hover:text-gray-700" do %>
              Ytupedia
            <% end %>
          </div>

          <!-- Center - Search Bar -->
          <div class="flex-1 flex justify-center">
            <div class="w-[600px]">
              <%= form_with url: parse_youtube_url_path, method: :post, class: "relative" do |f| %>
                <%= f.text_field :url,
                    placeholder: "Enter YouTube URL...",
                    class: "w-full px-4 py-2 pr-10 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                </button>
              <% end %>
            </div>
          </div>

          <!-- Right side -->
          <div class="w-64 flex items-center justify-end space-x-4">
            <button class="hover:bg-gray-100 px-3 py-1 rounded-md">Notify</button>
            <div class="relative group">
              <button class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center text-white">
                <%= Current.user.email_address.first.upcase %>
              </button>
              <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 invisible opacity-0 scale-95
                          group-hover:visible group-hover:opacity-100 group-hover:scale-100
                          transition-all duration-200 ease-in-out transform origin-top-right z-50">
                <div class="px-4 py-2 text-sm text-gray-500">
                  <%= Current.user.email_address %>
                </div>
                <div class="border-t"></div>
                <%= button_to "Sign Out", session_path, method: :delete,
                    class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Toast Notifications -->
    <%= render "shared/toast" %>

    <div class="flex flex-1 h-[calc(100vh-3.5rem)]">
      <!-- Sidebar -->
      <div class="w-64 bg-white border-r">
        <div class="p-4 space-y-2">
          <%= link_to "Home", root_path, class: "block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-md" %>
          <%= link_to "Summaries", root_path, class: "block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-md" %>
          <%= link_to "Channels", channels_path, class: "block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-md" %>
          <%= link_to "History", "#", class: "block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-md" %>
          <div class="border-t my-2"></div>
          <%= link_to "Settings", "#", class: "block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-md" %>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 overflow-auto bg-gray-50">
        <div class="p-6">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>