<%= render "shared/container", max_width: "max-w-md", class: "p-4 sm:p-6" do %>
  <div class="bg-white rounded-lg shadow p-4 sm:p-6 border border-gray-100">
    <h2 class="text-lg lg:text-xl font-semibold mb-6 text-center">Create Development User</h2>

    <%= form_with model: [:dev, @user], class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 text-red-600 p-4 rounded-lg mb-4">
          <h3 class="text-base font-medium mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-base space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email_address,
            class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
            class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation,
            class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center gap-3">
        <%= f.submit "Create User",
            class: "h-12 px-6 bg-purple-600 text-white text-base rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors" %>
        <%= link_to "Back to Users", dev_users_path,
            class: "h-12 flex items-center justify-center text-base text-gray-600 hover:text-gray-900 transition-colors" %>
      </div>
    <% end %>
  </div>
<% end %>