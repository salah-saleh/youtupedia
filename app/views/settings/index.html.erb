<div class="space-y-6">
  <!-- Settings Header -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6 border border-gray-100">
    <h2 class="text-lg lg:text-xl font-semibold">Settings</h2>
  </div>

  <!-- Admin Access Section -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6 border border-gray-100">
    <h3 class="text-lg lg:text-xl font-semibold mb-4">Admin Access</h3>

    <% if @admin_mode %>
      <!-- Admin Panel -->
      <div class="space-y-6">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2">
          <h4 class="text-base lg:text-lg font-medium text-gray-900">User Management</h4>
          <div class="text-base">
            <%= link_to "Exit Admin Mode", settings_path,
                class: "text-red-600 hover:text-red-800 transition-colors" %>
          </div>
        </div>

        <%= render "shared/user_switcher", users: @users %>
      </div>
    <% else %>
      <!-- Admin Access Form -->
      <%= form_with url: settings_path, method: :get, class: "max-w-md space-y-4" do |f| %>
        <div class="space-y-3">
          <%= f.password_field :admin_pass,
              placeholder: "Enter admin password...",
              class: "w-full h-12 px-4 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>

          <%= f.submit "Access Admin Panel",
              class: "w-full h-12 px-6 bg-purple-600 text-white text-base rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>