<%# Settings Page %>
<div class="space-y-6">
  <%# Settings Header %>
  <%= render "shared/section", title: "Settings" %>

  <%# Admin Access Section %>
  <%= render "shared/section", title: "Admin Access" do %>
    <% if @admin_mode %>
      <%# Admin Panel %>
      <div class="space-y-6">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2">
          <h4 class="text-base lg:text-lg font-medium text-gray-900 dark:text-white">User Management</h4>
          <div class="text-base">
            <%= link_to "Exit Admin Mode", settings_path,
                class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition-colors" %>
          </div>
        </div>

        <%= render "shared/user_switcher", users: @users %>
      </div>
    <% else %>
      <%# Admin Access Form %>
      <%= form_with url: settings_path, method: :post, class: "max-w-md space-y-4" do |f| %>
        <%= render "shared/form_components/auth_input",
            form: f,
            field: :admin_pass,
            type: :password_field,
            label: "Admin Password",
            placeholder: "Enter admin password...",
            required: true %>

        <%= f.submit "Access Admin Panel",
            class: "w-full h-12 px-6 bg-purple-600 text-white text-base rounded-lg
                    hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500
                    focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors" %>
      <% end %>
    <% end %>
  <% end %>
</div>