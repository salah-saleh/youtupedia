<div class="space-y-6">
  <!-- Settings Header -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6">
    <h2 class="text-xl lg:text-lg font-semibold mb-4">Settings</h2>
  </div>

  <!-- Admin Access Section -->
  <div class="bg-white rounded-lg shadow p-4 lg:p-6">
    <h3 class="text-lg font-medium mb-4">Admin Access</h3>

    <% if @admin_mode %>
      <!-- Admin Panel -->
      <div class="space-y-6">
        <div class="flex items-center justify-between">
          <h4 class="text-base font-medium text-gray-900">User Management</h4>
          <div class="text-sm">
            <%= link_to "Exit Admin Mode", settings_path,
                class: "text-red-600 hover:text-red-800" %>
          </div>
        </div>

        <%= render "shared/user_switcher", users: @users %>
      </div>
    <% else %>
      <!-- Admin Access Form -->
      <%= form_with url: settings_path, method: :get, class: "max-w-md" do |f| %>
        <div class="relative">
          <%= f.password_field :admin_pass,
              placeholder: "Enter admin password...",
              class: "w-full px-4 py-3.5 text-base rounded-lg border border-gray-300 focus:outline-none focus:border-purple-500" %>

          <%= f.submit "Access Admin Panel",
              class: "mt-3 w-full px-6 py-2.5 text-base bg-purple-500 text-white rounded-lg hover:bg-purple-600" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>