<%# Search Index %>
<div class="space-y-6">
  <%# Search Form %>
  <%= render "shared/form_section",
        title: "Search",
        url: search_index_path,
        method: :get do |f| %>
    <%= render "shared/form_components/search_input",
          form: f,
          field: :q,
          value: @query,
          placeholder: "Search summaries...",
          required: true %>

    <%= render "shared/form_components/button",
          text: "Search",
          type: "submit",
          variant: :primary,
          size: :lg %>
  <% end %>

  <%# Search Results %>
  <% if @query.present? %>
    <%= render "shared/page_header",
          title: "Search Results",
          count: @videos&.length,
          count_text: "result" %>

    <%= render "shared/video_grid",
          videos: @videos,
          highlight_terms: @search_terms,
          empty_message: "No videos found matching your search." %>
  <% end %>
</div>